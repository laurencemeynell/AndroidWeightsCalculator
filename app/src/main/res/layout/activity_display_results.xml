<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="io.github.laurencemeynell.weightcalculator.DisplayResults">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/x1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/weight1"
        android:layout_alignTop="@+id/x1"
        android:layout_toLeftOf="@+id/x1"
        android:layout_toStartOf="@+id/x1"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/multiplier1"
        android:layout_alignTop="@+id/x1"
        android:layout_toRightOf="@+id/x1"
        android:layout_toEndOf="@+id/x1"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/weight2"
        android:layout_below="@+id/weight1"
        android:layout_alignRight="@+id/weight1"
        android:layout_alignEnd="@+id/weight1"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/x2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/weight2"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/multiplier2"
        android:layout_alignTop="@+id/x2"
        android:layout_alignLeft="@+id/multiplier1"
        android:layout_alignStart="@+id/multiplier1"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/weight3"
        android:layout_below="@+id/weight2"
        android:layout_alignRight="@+id/weight2"
        android:layout_alignEnd="@+id/weight2"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/weight2"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/multiplier3"
        android:layout_below="@+id/multiplier2"
        android:layout_toRightOf="@+id/x3"
        android:layout_toEndOf="@+id/x3"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/weight4"
        android:layout_below="@+id/weight3"
        android:layout_alignRight="@+id/weight3"
        android:layout_alignEnd="@+id/weight3"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/x4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/weight4"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/multiplier4"
        android:layout_alignTop="@+id/x4"
        android:layout_alignLeft="@+id/multiplier3"
        android:layout_alignStart="@+id/multiplier3"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/weight5"
        android:layout_below="@+id/weight4"
        android:layout_alignRight="@+id/weight4"
        android:layout_alignEnd="@+id/weight4"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/x5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/weight5"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/multiplier5"
        android:layout_below="@+id/multiplier4"
        android:layout_toRightOf="@+id/x5"
        android:layout_toEndOf="@+id/x5"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/weight6"
        android:layout_below="@+id/weight5"
        android:layout_alignRight="@+id/weight5"
        android:layout_alignEnd="@+id/weight5"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/x6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/weight5"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/multiplier6"
        android:layout_below="@+id/multiplier5"
        android:layout_alignLeft="@+id/multiplier5"
        android:layout_alignStart="@+id/multiplier5"
        android:visibility="gone"/>

</RelativeLayout>
