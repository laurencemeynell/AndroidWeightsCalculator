<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".WeightCalculator">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/bar_weight"
        android:id="@+id/availableWeights"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/barWeight"
        android:layout_below="@+id/availableWeights"
        android:layout_alignRight="@+id/availableWeights"
        android:layout_alignEnd="@+id/availableWeights"
        android:layout_alignLeft="@+id/availableWeights" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/available_weights"
        android:id="@+id/textView"
        android:layout_below="@+id/barWeight"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/weight1"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/weight2"
        android:layout_below="@+id/weight1"
        android:layout_alignLeft="@+id/weight1"
        android:layout_alignStart="@+id/weight1"
        android:layout_alignRight="@+id/weight1"
        android:layout_alignEnd="@+id/weight1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/weight3"
        android:layout_below="@+id/weight2"
        android:layout_alignRight="@+id/weight2"
        android:layout_alignEnd="@+id/weight2"
        android:layout_alignLeft="@+id/weight2"
        android:layout_alignStart="@+id/weight2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/weight4"
        android:layout_below="@+id/weight3"
        android:layout_alignRight="@+id/weight3"
        android:layout_alignEnd="@+id/weight3"
        android:layout_alignLeft="@+id/weight3"
        android:layout_alignStart="@+id/weight3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/weight5"
        android:layout_below="@+id/weight4"
        android:layout_alignRight="@+id/weight4"
        android:layout_alignEnd="@+id/weight4"
        android:layout_alignLeft="@+id/weight4"
        android:layout_alignStart="@+id/weight4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/available_weights"
        android:id="@+id/textView2"
        android:layout_below="@+id/weight5"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
